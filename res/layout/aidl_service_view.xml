<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
	
    <Button
        android:id="@+id/getAidlService"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text= "获取远程的aidl service的状态"/>
    
    <EditText
        android:id="@+id/aidlServiceText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="这里呆会会显示aidl service的状态"/>
    <Button
        android:id="@+id/getTHM"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text= "获取系统相关信息"/>
    
    <EditText
        android:id="@+id/aidlTHMText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="这里呆会会显示系统相关信息"/>
    
</LinearLayout>